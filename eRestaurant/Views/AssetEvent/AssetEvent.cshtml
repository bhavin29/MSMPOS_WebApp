                                                                    <select asp-for="IngredientId"
                                                                            class="form-control"
                                                                            asp-items="@(new SelectList(Model.IngredientList, "Value", "Text"))" onchange="return GetIngredientPriceById();">
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1 pr-2 pl-2">
