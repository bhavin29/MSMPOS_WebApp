@using Microsoft.Extensions.Localization;
@model RocketPOS.Models.AssetEventModel
@using  RocketPOS.Resources
@inject LocService SharedLocalizer
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        <h5 class="card-title">Catering</h5>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check form-switch">
                            <input asp-for="Id" class="form-control" type="hidden" />
                            <input asp-for="Status" class="form-control" type="hidden" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 pl-0 pr-0">
                        <form asp-action="AssetEvent" method="post" id="assetEventForm" role="form">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-1 pr-0 pl-4">
                                        <div class="form-group">
                                            <label asp-for="ReferenceNo" class="control-label">Doc Number</label>
                                            <input asp-for="ReferenceNo" disabled="disabled" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="EventName" class="control-label">Catering Name</label>
                                            <input asp-for="EventName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="EventDatetime" class="control-label">Date</label>
                                            <input asp-for="EventDatetime" type="date" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="EventPlace" class="control-label">Place</label>
                                            <input asp-for="EventPlace" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="ContactPersonName" class="control-label">Contact Person</label>
                                            <input asp-for="ContactPersonName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-4 pl-2">
                                        <div class="form-group">
                                            <label asp-for="ContactPersonNumber" class="control-label">Contact Number</label>
                                            <input asp-for="ContactPersonNumber" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <label asp-for="StoreId" class="control-label">Store</label>
                                            <select asp-for="StoreId" class="form-control"
                                                    asp-items="@(new SelectList(Model.StoreList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="StoreId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>*@

                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-header" id="headingOne">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link pl-0" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                <h6>Assets Detail</h6>
                                            </button>
                                        </h5>
                                    </div>

                                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                        <div class="card-body">

                                            <div class="row">

                                                <div class="col-md-12">
                                                    <div class="row">
                                                        <div class="col-md-4 pr-0 pl-2">
                                                            <div class="form-group">
                                                                <label asp-for="AssetItemList" class="control-label">Asset Item</label>
                                                                <select asp-for="AssetItemId"
                                                                        class="form-control"
                                                                        asp-items="@(new SelectList(Model.AssetItemList, "Value", "Text"))" onchange="return GetAssetItemPriceById();">
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-1 pr-2 pl-2">
                                                            <div class="form-group">
                                                                <label class="control-label text-right">Cost Price</label>
                                                                <input class="form-control text-right" type="number" min="0" max="9999" value="1" placeholder="0.00" id="AssetItemCostPrice" />
                                                            </div>
                                                        </div>

                                                        <div class="col-md-1 pr-2 pl-2">
                                                            <div class="form-group">
                                                                <label class="control-label text-right">Qty</label>
                                                                <input class="form-control text-right" type="number" min="1" max="9999" value="1" placeholder="0.00" id="EventQty" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-1 pr-2 pl-2">
                                                            <div class="form-group">
                                                                <label id="AssetItemUnitName" class="control-label" style="margin-top: 28px"></label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-1 pr-2 pl-2">
                                                            <div class="form-group">
                                                                <label class="control-label"></label>
                                                                <button id="addRowItem" class="btn btn-outline-dark" style="margin-top: 22px">Add</button>
                                                                <input class="form-control" type="hidden" id="AssetEventItemId" value="0" />
                                                                <input class="form-control" type="hidden" value="0.0" id="StockQty" />
                                                                <input class="form-control" type="hidden" value="0.0" id="AllocatedQty" />
                                                                <input class="form-control" type="hidden" value="0.0" id="ReturnQty" />
                                                                <input class="form-control" type="hidden" value="0.0" id="MissingQty" />
                                                                @*<input class="form-control" type="hidden" id="MissingNote" />*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 pr-2 pl-2">
                                                    <table id="AssetEventItem" width="100%" autowidth="true" class="display table table-bordered table-hover dataTable" role="grid" aria-describedby="basic-datatables_info">
                                                        <thead>
                                                            <tr>
                                                                <th style="width:1%">AssetEventItemId</th>
                                                                <th style="width:1%">AssetItemId</th>
                                                                <th style="width:20%">Asset Item</th>
                                                                <th style="width:8%" class="text-right">Stock Qty</th>
                                                                <th style="width:8%" class="text-right">Qty </th>
                                                                <th style="width:8%" class="text-right">Cost Price</th>
                                                                <th style="width:8%" class="text-right">Total </th>
                                                                <th style="width:8%" class="text-right">Allocated Qty</th>
                                                                <th style="width:8%" class="text-right">Return Qty</th>
                                                                <th style="width:8%" class="text-right">Missing Qty</th>
                                                                <th style="width:16%">Missing Note</th>
                                                                <th style="width:8%">Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.assetEventItemModels != null)
                                                            {
                                                                @foreach (var item in Model.assetEventItemModels)
                                                                {
                                                                    var tm = "#myAModal" + item.AssetItemId;
                                                                    var mid = "myAModal" + item.AssetItemId;
                                                                    var rowId = "rowId" + item.AssetItemId;
                                                                    <tr id="@rowId">
                                                                        <td>
                                                                            @item.AssetEventItemId
                                                                        </td>
                                                                        <td>
                                                                            @item.AssetItemId
                                                                        </td>
                                                                        <td>
                                                                            @item.AssetItemName
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @item.StockQty
                                                                        </td>
                                                                        <td class="text-right">
                                                                            <label>@item.EventQty</label> <label>@item.AssetItemUnitName</label>
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @item.CostPrice
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @item.TotalAmount
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @{
                                                                                string allocatedId = "allocatedQty" + @item.AssetItemId;
                                                                            }
                                                                            <input type="number" id="@allocatedId" asp-for="@item.AllocatedQty" class="form-control col-sm-11 text-right" min="0" max="99999" value="@item.AllocatedQty" />
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @{
                                                                                string returnId = "returnQty" + @item.AssetItemId;
                                                                            }
                                                                            <input type="number" id="@returnId" asp-for="@item.ReturnQty" class="form-control col-sm-11 text-right" min="0" max="99999" value="@item.ReturnQty" />
                                                                        </td>
                                                                        <td class="text-right">
                                                                            @{
                                                                                string missingId = "missingQty" + @item.AssetItemId;
                                                                            }
                                                                            <input type="number" id="@missingId" asp-for="@item.MissingQty" class="form-control col-sm-11 text-right" min="0" max="99999" value="@item.MissingQty" />
                                                                        </td>
                                                                        <td>
                                                                            @if ((item.AllocatedQty - item.ReturnQty) > 0)
                                                                            {
                                                                                string MissingNoteId = "MissingNote" + @item.AssetItemId;

                                                                                <select id="@MissingNoteId" asp-for="@item.MissingNote"
                                                                                        class="form-control"
                                                                                        asp-items="@(new SelectList(Model.MissingNoteList, "Value", "Text"))">
                                                                                </select>
                                                                            }
                                                                            else
                                                                            {
                                                                                <select asp-for="@item.MissingNote" disabled="disabled"
                                                                                        class="form-control"
                                                                                        asp-items="@(new SelectList(Model.MissingNoteList, "Value", "Text"))">
                                                                                </select>
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            <div class="form-button-action">
                                                                                <a href="#" data-itemid="@item.AssetItemId" class="editAssetItem">Edit</a> /
                                                                                <a href="#" data-toggle="modal" data-target="@tm">Delete</a>
                                                                            </div>
                                                                        </td>
                                                                        <div class="modal fade" id=@mid tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                                            <div class="modal-dialog">
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                                    </div>
                                                                                    <div class="modal-body">
                                                                                        @SharedLocalizer.GetLocalizedHtmlString("DeleteConfrim")
                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <a id="deleteBtn" data-itemId="@item.AssetEventItemId" onclick="deleteAssetOrder(@item.AssetEventItemId,@item.AssetItemId, @rowId)" class="btn bg-danger mr-1" data-dismiss="modal">Delete</a>
                                                                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 pl-0 pr-0">
                                                    <div class="form-group form-inline fc-left">
                                                        <div class="col-md-1 pr-2 pl-2">
                                                            <label asp-for="AssetItemNetAmount" class="control-label">Valuation</label>
                                                            <input asp-for="AssetItemNetAmount" style="width:80px" disabled="disabled" class="form-control input-full text-right">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 pl-0 pr-0">
                                                        <div class="form-group form-inline fc-left">
                                                            <div class="col-md-1 pr-2 pl-2">
                                                                <label asp-for="MissingTotalAmount" class="control-label">Missing Amount</label>
                                                                <input asp-for="MissingTotalAmount" style="width:80px" disabled="disabled" class="form-control input-full text-right">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="card-header" id="headingTwo">
                                            <h5 class="mb-0">
                                                <button class="btn btn-link collapsed pl-0" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                    <h6>Menu Item Detail</h6>
                                                </button>
                                            </h5>
                                        </div>
                                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                            <div class="card-body">

                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="row">
                                                            <div class="col-md-4 pr-0 pl-2">
                                                                <div class="form-group">
                                                                    <label asp-for="FoodMenuList" class="control-label">FoodMenu</label>
                                                                    <select asp-for="FoodMenuId"
                                                                            class="form-control"
                                                                            asp-items="@(new SelectList(Model.FoodMenuList, "Value", "Text"))" onchange="return GetFoodMenuPriceTaxDetailById();">
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1 pr-2 pl-2">
                                                                <div class="form-group">
                                                                    <label class="control-label text-right">Catering Price</label>
                                                                    <input class="form-control text-right" type="number" min="0" max="9999" value="0" placeholder="0.00" id="SalesPrice" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1 pr-2 pl-2">
                                                                <div class="form-group">
                                                                    <label class="control-label text-right">Qty</label>
                                                                    <input class="form-control text-right" type="number" min="1" max="9999" value="1" placeholder="0.00" id="Quantity" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1 pr-2 pl-2">
                                                                <div class="form-group">
                                                                    <label id="FoodMenuUnitName" class="control-label" style="margin-top: 28px"></label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-1 pr-2 pl-2">
                                                                <div class="form-group">
                                                                    <label class="control-label"></label>
                                                                    <button id="addRowFood" class="btn btn-outline-dark" style="margin-top: 22px">Add</button>
                                                                    <input class="form-control" type="hidden" id="AssetEventFoodmenuId" value="0" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
