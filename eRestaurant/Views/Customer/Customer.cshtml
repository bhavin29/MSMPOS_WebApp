@model RocketPOS.Models.CustomerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-inner">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Customer</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Customer">
                                <div class="row">
                                    <div class="col-md-6 col-lg-4">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="CustomerName" class="control-label">Customer Name</label>
                                            <input asp-for="CustomerName" class="form-control" />
                                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CustomerPhone" class="control-label">Contact Number</label>
                                            <input asp-for="CustomerPhone" class="form-control" />
                                            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CustomerEmail" class="control-label">Email</label>
                                            <input asp-for="CustomerEmail" class="form-control" />
                                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label asp-for="CustomerAddress1" class="control-label">Address 1</label>
                                            <input asp-for="CustomerAddress1" class="form-control" />
                                            <span asp-validation-for="CustomerAddress1" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CustomerAddress2" class="control-label">Address 2</label>
                                            <input asp-for="CustomerAddress2" class="form-control" />
                                            <span asp-validation-for="CustomerAddress2" class="text-danger"></span>
                                        </div>
                                        @*<div class="form-group">
                                            <label asp-for="IsActive" class="control-label"></label>
                                            <input asp-for="IsActive" class="form-control" />
                                        </div>*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    @if (Model != null)
                                    {
                                        @if (Model.Id > 0)
                                        {
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        }
                                        else
                                        {
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        }
                                    }
                                    <a href='@Url.Action("Index", "Customer")' class="btn btn-primary" style="margin:0px 0px 0px 5px">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.Result != null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            });
        </script>
    }
}
@section Scripts{
    <script>
        $('#save').click(function () {
            window.location.href = "Index";
        });
        $('#OK').click(function () {
            $("#Customer").prev().focus();
            $("#vModal").modal('hide');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />

}
