@using Microsoft.Extensions.Localization;
@model IEnumerable<RocketPOS.Models.FoodMenuModel>
@inject IStringLocalizer<RocketPOS.Resources.RocketPOSResources> SharedLocalizer;
@{
    ViewData["Title"] = "FoodMenu";
}

<h2>Food Menu</h2>
<p>
    <a asp-action="FoodMenu" class="pull-right btn btn-primary">Create New</a>
</p>

@if (!string.IsNullOrEmpty(ViewBag.msg))
{
    <script type="text/javascript">
        alert("@ViewBag.msg");
    </script>
}
<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FoodCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodMenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodMenuCode)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ColourCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BigThumb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MediumThumb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SmallThumb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsVegItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBeverages)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.OfferIsAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OutletId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var tm = "#myModal" + item.Id;
            var mid = "myModal" + item.Id;

            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FoodCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodMenuName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.FoodMenuCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ColourCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BigThumb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MediumThumb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SmallThumb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsVegItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBeverages)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.OfferIsAvailable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OutletId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="FoodMenu" class="btn btn-primary" asp-route-Id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" data-toggle="modal" data-target="@tm">Delete</a>
                </td>
            </tr>
            <div class="modal fade" id="@mid" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            @SharedLocalizer["DeleteConfrim"];
                            @*Are you sure want to delete this item?*@
                        </div>
                        <div class="modal-footer">
                            <a asp-action="Delete" asp-route-Id="@item.Id" id="deleteBtn" class="btn bg-danger mr-1">Delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
