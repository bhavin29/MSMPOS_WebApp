
@using Microsoft.Extensions.Localization;
@model IEnumerable<RocketPOS.Models.IngredientCategoryModel>
@inject IStringLocalizer<RocketPOS.Resources.RocketPOSResources> SharedLocalizer;
@{
    ViewData["Title"] = "IngredientCategory";
}
<h1>Ingredient Category</h1>

<p>
    <a asp-action="IngredientCategory" class="pull-right btn btn-primary">Create New</a>
</p>

@if (!string.IsNullOrEmpty(ViewBag.msg))
{
    <script type="text/javascript">
        alert("@ViewBag.msg");
    </script>
}
<table class="table">
    <thead>
        <tr>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IngredientCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RawMaterialType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var tm = "#myModal" + item.Id;
            var mid = "myModal" + item.Id;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RawMaterialType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="IngredientCategory" class="btn btn-primary" asp-route-Id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" data-toggle="modal" data-target="@tm">Delete</a>
                </td>
            </tr>
            <div class="modal fade" id="@mid" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            @SharedLocalizer["DeleteConfrim"];
                            @*Are you sure want to delete this item?*@
                        </div>
                        <div class="modal-footer">
                            <a asp-action="Delete" asp-route-Id="@item.Id" id="deleteBtn" class="btn bg-danger mr-1">Delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>
