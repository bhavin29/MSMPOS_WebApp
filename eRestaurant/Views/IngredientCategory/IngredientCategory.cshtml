@using RocketPOS.Framework;
@model RocketPOS.Models.IngredientCategoryModel

@{
    //  ViewData["Title"] = "IngredientCategory";
}


@if (!string.IsNullOrEmpty(ViewBag.msg))
{
    <script type="text/javascript">
        alert("@ViewBag.msg");
    </script>
}

<div class="page-inner">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Manage Ingredient Category</h5>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="IngredientCategory">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                @*<div class="form-group">
                                        <label asp-for="Id" class="control-label"></label>
                                        <input asp-for="Id" class="form-control" />
                                        <span asp-validation-for="Id" class="text-danger"></span>
                                    </div>*@
                                <div class="form-group">
                                    <label asp-for="IngredientCategoryName" class="control-label"></label>
                                    <input asp-for="IngredientCategoryName" class="form-control" />
                                    <span asp-validation-for="IngredientCategoryName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="RawMaterialType" class="control-label">Role</label>
                                    <select asp-for="RawMaterialType" class="form-control" asp-items="Html.GetEnumSelectList<RawMaterialType>()">
                                        <option selected="selected" value="">--Select raw material type--</option>
                                    </select>
                                    <span asp-validation-for="RawMaterialType" class="text-danger" />
                                    a
                                </div>
                                <div class="form-group">
                                    <label asp-for="Notes" class="control-label"></label>
                                    <input asp-for="Notes" class="form-control" />
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                                @if (Model != null)
                                {
                                    @if (Model.Id > 0)
                                    {

                                        <div class="form-group">
                                            <label asp-for="IsActive" class="control-label"></label>
                                            <input asp-for="IsActive" class="form-control" />
                                            <span class="alert-danger" asp-validation-for="IsActive"></span>
                                        </div>
                                    }
                                }
                                @*<div class="form-group">
                                        <label asp-for="UserId" class="control-label"></label>
                                        <input asp-for="UserId" class="form-control" />
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>*@
                            <div class="form-group">
                                @if (Model != null)
                                {
                                    @if (Model.Id > 0)
                                    {
                                        <input type="submit" value="Edit" class="btn btn-primary btn-sm" />
                                    }
                                    else
                                    {
                                        <input type="submit" value="Add" class="btn btn-primary btn-sm" />
                                    }
                                    <a href='@Url.Action("Index", "IngredientCategory")' class="btn btn-primary" style="margin:0px 0px 0px 5px">Cancel</a>
                                }
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.Result != null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            });
        </script>
    }
}
@section Scripts{
    <script>
        $('#save').click(function () {
            window.location.href = "Index";
        });
        $('#OK').click(function () {
            $("#IngredientCategory").prev().focus();
            $("#vModal").modal('hide');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />

}
