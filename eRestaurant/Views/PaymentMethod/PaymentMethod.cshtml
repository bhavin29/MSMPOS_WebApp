@model RocketPOS.Models.PaymentMethodModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    //   ViewData["Title"] = "PaymentMethod";
}
<div class="page-inner">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Add Payment Method</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="PaymentMethod">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                @*<div class="form-group">
                                        <label asp-for="Id" class="control-label"></label>
                                        <input asp-for="Id" class="form-control" />
                                        <span asp-validation-for="Id" class="text-danger"></span>
                                    </div>*@
                                <div class="form-group">
                                    <label asp-for="PaymentMethodName" class="control-label"></label>
                                    <input asp-for="PaymentMethodName" class="form-control" />
                                    <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsBank" class="control-label"></label>
                                    <input asp-for="IsBank" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsIntegration" class="control-label"></label>
                                    <input asp-for="IsIntegration" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsActive" class="control-label"></label>
                                    <input asp-for="IsActive" class="form-control" />
                                </div>
                                <div class="form-group">
                                    @if (Model != null)
                                    {
                                        @if (Model.Id > 0)
                                        {
                                            <input type="submit" value="Edit" class="btn btn-primary btn-sm" />
                                        }
                                        else
                                        {
                                            <input type="submit" value="Add" class="btn btn-primary btn-sm" />
                                        }
                                    }
                                    <input type="submit" asp-action="Index" value="Cancel" class="btn btn-primary btn-sm" />

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.Result != null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            });
        </script>
    }
}
@section Scripts{
    <script>
        $('#save').click(function () {
            window.location.href = "/../PaymentMEthod/Index";
        });
    </script>
}
