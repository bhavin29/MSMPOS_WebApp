@model RocketPOS.Models.PaymentMethodModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-inner">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Manage Payment Method</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="PaymentMethod">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="PaymentMethodName" class="control-label"></label>
                                    <input asp-for="PaymentMethodName" class="form-control" />
                                    <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsBank" class="form-check-label" style="margin: 5px 0 0 0px"></label>
                                    <input asp-for="IsBank"  class="form-check-input" style="margin: 7Px 0 0 57px"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsIntegration" class="control-label" style="margin: 10px 0 0 0px"></label>
                                    <input asp-for="IsIntegration" class="form-check-input" style="margin: 12Px 0 0 24px" />
                                </div>
                                @if (Model != null)
                                {
                                    @if (Model.Id > 0)
                                    {

                                        <div class="form-group">
                                                <label asp-for="IsActive"   class="control-label" style="margin: 10px 0 0 0px"></label>
                                                <input asp-for="IsActive" class="form-check-input" style="margin: 7Px 0 0 42px" />
                                        </div>
                                    }
                                }
                            <div class="form-group">
                                @if (Model != null)
                                {
                                    @if (Model.Id > 0)
                                    {
                                        <input type="submit" value="Edit" class="btn btn-primary" />
                                    }
                                    else
                                    {
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    }
                                }
                                <a href='@Url.Action("Index", "PaymentMethod")' class="btn btn-primary" style="margin:0px 0px 0px 5px">Cancel</a>

                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.Result != null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            });
        </script>
    }
}
@section Scripts{
    <script>
        $('#save').click(function () {
            window.location.href = "Index";
        });
        $('#OK').click(function () {
            $("#PaymentMEthod").prev().focus();
            $("#vModal").modal('hide');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />

}
