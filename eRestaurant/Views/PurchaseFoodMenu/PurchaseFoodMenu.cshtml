@using Microsoft.Extensions.Localization;
@model RocketPOS.Models.PurchaseModel
@using  RocketPOS.Resources
@inject LocService SharedLocalizer
@{
    //ViewData["Title"] = "Purchase";
    //List<PurchaseDetailsModel> purchaseDetails = new List<PurchaseDetailsModel>();
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="card-title">Add Food Menu Purchase</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Purchase" method="post" id="purchase" role="form">
                    <div class="row">
                        @if (Model.Id > 0)
                        {
                            <div class="col-md-12">
                                <div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="ReferenceNo" class="control-label"></label>
                                                <input asp-for="ReferenceNo" disabled="disabled" class="form-control" />
                                                <span asp-validation-for="ReferenceNo" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-md-12">
                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="StoreList" class="control-label">Store</label>
                                            <select asp-for="StoreId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.StoreList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="StoreId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="SupplierList" class="control-label">Supplier</label>
                                            <select asp-for="SupplierId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.SupplierList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="EmployeeList" class="control-label">Responsible Person</label>
                                            <select asp-for="EmployeeId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.EmployeeList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Date" class="control-label"></label>
                                            <input asp-for="Date" type="date" class="form-control" />
                                            <span asp-validation-for="Date" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h3 style="margin-left:10px" class="control-label">Food Menu Detail</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="FoodMenuList" class="control-label">Food Menu</label>
                                        <select asp-for="FoodMenuId"
                                                class="form-control"
                                                asp-items="@(new SelectList(Model.FoodMenuList, "Value", "Text"))">
                                        </select>
                                        <span asp-validation-for="FoodMenuId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label text-right">Purchase Price</label>
                                        <input class="form-control text-right" type="number" placeholder="0.00" id="UnitPrice" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label text-right">Quantity</label>
                                        <input class="form-control text-right" type="text" placeholder="0.00" id="Quantity" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label"></label>
                                        <button id="addRow" class="form-control btn btn-primary" style="margin-top: 7px">Add New</button>
                                        <input class="form-control" type="hidden" id="PurchaseId" value="0" />
                                        <input asp-for="Id" class="form-control" type="hidden" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="control-label"></label>
                                        <button id="cancel" class="form-control btn btn-primary" style="margin-top: 7px">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="PurchaseOrderDetails" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="basic-datatables_info">
                                <thead>
                                    <tr>
                                        <th style="width:35%">FoodMenuId</th>
                                        <th style="width:35%">Food Menu</th>
                                        <th style="width:20%" class="text-right">Purchase Price</th>
                                        <th style="width:15%" class="text-right">Quantity</th>
                                        <th style="width:20%" class="text-right">Amount</th>
                                        <th style="width:25%" class="text-center">Actions</th>
                                        <th style="width:10%">PurchaseId</th>
                                    </tr>
                                </thead>
                                @if (Model.Id > 0)
                                {
                                    @foreach (var item in Model.PurchaseDetails)
                                    {
                                        var tm = "#myModal" + item.PurchaseId;
                                        var mid = "myModal" + item.PurchaseId;
                                        var rowId = "rowId" + item.PurchaseId;
                                        <tr id="@rowId">
                                            <td>
                                                @item.FoodMenuId
                                            </td>
                                            <td>
                                                @item.FoodMenuName
                                            </td>
                                            <td class="text-right">
                                                @item.UnitPrice
                                            </td>
                                            <td class="text-right">
                                                @item.Quantity
                                            </td>
                                            <td class="text-right">
                                                @item.Total
                                            </td>
                                            <td>
                                                <div class="form-button-action">
                                                    <a href="#" data-itemid="@item.FoodMenuId" class="btn btn-link  editItem"><i class="fa fa-edit"></i></a><a href="#" class="btn btn-link btn-danger" data-toggle="modal" data-target="@tm"><i class="fa fa-times"></i></a>
                                                </div>
                                            </td>
                                            <td>
                                                @item.PurchaseId
                                            </td>
                                        </tr>
                                        <div class="modal fade" id=@mid tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        @SharedLocalizer.GetLocalizedHtmlString("DeleteConfrim")
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a id="deleteBtn" data-itemId="@item.FoodMenuId" onclick="deleteOrder(@item.PurchaseId, @item.FoodMenuId,@rowId)" class="btn bg-danger mr-1" data-dismiss="modal">Delete</a>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 col-lg-7">
                                            <div class="form-group form-inline">
                                                <label asp-for="Notes" class="col-md-4 col-form-label align-text-top">Notes: </label>
                                                <div class="col-md-6 p-0">
                                                    <textarea asp-for="Notes" class="form-control input-full text-left" rows="6"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-group form-inline fc-right">
                                                <label asp-for="GrandTotal" class="col-md-4 col-form-label text-right">Grand Total: </label>
                                                <div class="col-md-8 p-0 ">
                                                    <input type="number" asp-for="GrandTotal" class="form-control input-full text-right" disabled="disabled" placeholder="0.00">
                                                </div>
                                            </div>
                                            <div class="form-group form-inline">
                                                <label asp-for="Paid" class="col-md-4 col-form-label text-right">Paid: </label>
                                                <div class="col-md-8 p-0">
                                                    <input type="number" asp-for="Paid" class="form-control input-full text-right" placeholder="0.00">
                                                </div>
                                            </div>
                                            <div class="form-group form-inline">
                                                <label asp-for="Due" class="col-md-4 col-form-label text-right">Due: </label>
                                                <div class="col-md-8 p-0">
                                                    <input type="number" asp-for="Due" class="form-control input-full text-right" disabled="disabled" placeholder="0.00">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-button-action" >
                        <input id="saveOrder" type="submit" class="btn btn-primary " value="Save" />
                        <a href='@Url.Action("PurchaseFoodMenuList", "PurchaseFoodMenu")' class="btn btn-primary" style = "margin:0px 0px 0px 5px">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary ">Ok</button>
                <button type="button" id="ok" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
