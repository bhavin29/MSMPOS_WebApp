<div id="CateringReport" class="container">
    <div class="row">

        <div class="col-xs-12">
            <div class="invoice-title">
                <h4>@Model.SupplierName</h4>
            </div>
            <hr>
            <div class="row mb-4">
                <div class="col-xs-9">
                    <address>
                        <strong>SupplierName  :  </strong>@Model.SupplierName<br>
                        <strong>Address1  :  </strong>@Model.SupplierAddress1<br>
                        <strong>Address2  :  </strong>@Model.SupplierAddress2<br>
                        <strong>Phone  :  </strong>@Model.SupplierPhone<br>
                        <strong>Email  :  </strong>@Model.SupplierEmail<br>
                    </address>
                </div>
                <div class="col-xs-3">
                    <address>
                        <strong>No#  </strong>@Model.ReferenceNo<br>
                        <strong>Purchase Date  :  </strong>@Model.Date.ToShortDateString()<br>
                        <strong>Store Name  :  </strong>@Model.StoreName<br>
                        
                    </address>
                </div>
            </div>
        </div>
    </div>

    @if (Model.PurchaseDetails.Count > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Purchase Details</strong></h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th style="width:25%">Menu Item</th>
                                    <th style="width:8%" class="text-right">Unit Price</th>
                                    <th style="width:8%" class="text-right">Qty </th>
                                    <th style="width:10%" class="text-right">Total Amount</th>
                                    <th style="width:8%" class="text-right">Tax Amount</th>
                                    <th style="width:8%" class="text-right">Tax %</th>
                                    <th style="width:10%" class="text-right">Discount Amount</th>
                                    <th style="width:10%" class="text-right">Discount %</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PurchaseDetails)
                                {
                                    var tm = "#myAModal" + item.PurchaseId;
                                    var mid = "myAModal" + item.PurchaseId;
                                    var rowId = "rowId" + item.PurchaseId;
                                    <tr id="@rowId">
                                        <td>
                                            @item.FoodMenuName
                                        </td>
                                        <td class="text-right">
                                            @item.UnitPrice
                                        </td>
                                        <td class="text-right">
                                            @item.Quantity
                                        </td>
                                        <td class="text-right">
                                            @item.Total
                                        </td>
                                        <td class="text-right">
                                            @item.TaxAmount
                                        </td>
                                        <td class="text-right">
                                            @item.TaxPercentage
                                        </td>
                                        <td class="text-right">
                                            @item.DiscountAmount
                                        </td>
                                        <td class="text-right">
                                            @item.DiscountPercentage
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12 ">
                            <div class="col-sm-9">
                            </div>
                            <div class="col-sm-3">
                                <div><strong>Gross Amount : </strong>@Model.GrossAmount</div>
                                <div><strong>Discount Amount : </strong>@Model.DiscountAmount</div>
                                <div><strong>Tax Amount : </strong>@Model.TaxAmount</div>
                                <div><strong>Total Amount : </strong>@Model.GrandTotal</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <div class="row">
        <div class="col-md-12 ">
            <div class="col-sm-6">
                <div><strong>Notes:    </strong> @Model.Notes</div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
