                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-wrap">
                                <table id="PurchaseGRNDetails" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="basic-datatables_info">
                                    <thead>
                                        <tr>
                                            <th style="width:0%">FoodMenuId</th>
                                            <th style="width:35%">Food Menu</th>
                                            <th style="width:5%" class="text-right">PO Qty</th>
                                            <th style="width:10%" class="text-right">GRN Qty</th>
                                            <th style="width:10%" class="text-right">Price</th>
                                            <th style="width:0%" class="text-right">Dis%</th>
                                            <th style="width:10%" class="text-right">Dis Amt</th>
                                            @*<th style="width:0%" class="text-right">Tax%</th>*@
                                            <th style="width:10%" class="text-right">Tax Amt</th>
                                            <th style="width:10%" class="text-right">Total</th>
                                            <th style="width:10%" class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    @if (Model.Id > 0)
                                    {
                                        @foreach (var item in Model.PurchaseGRNDetails)
                                        {
                                            var tm = "#myModal" + item.PurchaseGRNId;
                                            var mid = "myModal" + item.PurchaseGRNId;
                                            var rowId = "rowId" + item.PurchaseGRNId;
                                            <tr id="@rowId">
                                                <td>
                                                    @item.FoodMenuId
                                                </td>
                                                <td>
                                                    @item.FoodMenuName
                                                </td>
                                                <td class="text-right">
                                                    @item.POQTY.ToString("N")
                                                </td>
                                                <td class="text-right">
                                                    @item.GRNQTY.ToString("N")
                                                </td>
                                                <td class="text-right">
                                                    @item.UnitPrice.ToString("N")
                                                </td>
                                                <td class="text-right">
                                                    @item.DiscountPercentage.ToString("N")
                                                </td>
                                                <td class="text-right">
                                                    @item.DiscountAmount.ToString("N")
                                                </td>
                                                @*<td class="text-right">
                                                        @item.TaxAmount.ToString("N")
                                                    </td>*@
                                                <td class="text-right">
                                                    @item.TaxAmount.ToString("N")
                                                </td>
                                                <td class="text-right">
                                                    @item.TotalAmount.ToString("N")
                                                </td>
                                                <td>
                                                    <div class="form-button-action">
                                                        <a href="#" data-itemid="@item.FoodMenuId" class="btn btn-link  editItem"></a><a href="#" data-toggle="modal" data-target="@tm">Delete<i></i></a>
                                                    </div>
                                                </td>
                                                <td>
                                                    @item.PurchaseGRNId
                                                </td>
                                            </tr>
                                            <div class="modal fade" id=@mid tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        </div>
                                                        <div class="modal-body">
                                                            @SharedLocalizer.GetLocalizedHtmlString("DeleteConfrim")
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a id="deleteBtn" data-itemId="@item.FoodMenuId" onclick="deleteOrder(@item.PurchaseGRNId, @item.FoodMenuId,@rowId)" class="btn bg-danger mr-1" data-dismiss="modal">Delete</a>
                                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DeliveryNoteNumber" class="control-label">Delivery Note No.</label>
                                                <input type="text" asp-for="DeliveryNoteNumber" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-2 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DeliveryDate" class="control-label"></label>
                                                <input asp-for="DeliveryDate" type="date" class="form-control" />
                                                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-2 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DriverName" class="control-label">Driver Name</label>
                                                <input type="text" asp-for="DriverName" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-2 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="VehicleNumber" class="control-label">Vehicle Number</label>
                                                <input type="text" asp-for="VehicleNumber" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-4 pl-2 pr-2">
                                            <div class="form-group">
                                                <label asp-for="Notes" class="control-label ">Notes</label>
                                                <textarea asp-for="Notes" class="form-control input-full text-left" rows="1" cols="50"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group form-inline fc-left">
                                                <label asp-for="GrossAmount">Gross Total: </label>
                                                @Html.DisplayText(Model.GrossAmount.ToString("0.00"));
                                                <label asp-for="TaxAmount">VAT</label>
                                                @Html.DisplayText(Model.TaxAmount.ToString("0.00"));
                                                <label asp-for="TotalAmount">Total Amount: </label>
                                                @Html.DisplayText(Model.TotalAmount.ToString("0.00"));
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-button-action">
                        <input id="saveOrder" type="submit" class="btn btn-primary " style="margin:0px 0px 0px 5px" value="Save" />
                        <a href='@Url.Action("PurchaseGRNFoodMenuList", "PurchaseGRNFoodMenu")' class="btn btn-primary" style="margin:0px 0px 0px 5px">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

