@using Microsoft.Extensions.Localization;
@model RocketPOS.Models.PurchaseGRNModel
@using  RocketPOS.Resources
@inject LocService SharedLocalizer
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="card-title">Manage Goods Receipt Note</h5>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <form asp-action="PurchaseGRNFoodMenu" method="post" id="purchaseGRN" role="form">
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                <div class="row">
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="ReferenceNo" class="control-label">Order No.</label>
                                            <input asp-for="ReferenceNo" disabled="disabled" class="form-control" />
                                            <span asp-validation-for="ReferenceNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="StoreList" class="control-label">Store</label>
                                            <select asp-for="StoreId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.StoreList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="StoreId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="SupplierList" class="control-label">Supplier</label>
                                            <select asp-for="SupplierId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.SupplierList, "Value", "Text"))"
                                                    onchange="GetSupplierDetails(SupplierId)">
                                            </select>
                                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-1 pr-2 pl-2">
                                        <div class="form-group">
                                            <label class="control-label">Reference</label>
                                            <input type="text" id="POReference" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-1 pr-2 pl-2">
                                        <div class="form-group">
                                            <label class="control-label"></label>
                                            <button id="LoadProduct" class="btn btn-light">Load Product</button>
                                            <input asp-for="Id" class="form-control" type="hidden" />
                                        </div>
                                    </div>
                                    @*<div class="col-md-3 pr-2 pl-2">
                                                <div class="form-group">
                                                    <label asp-for="SupplierEmail" class="control-label">Supplier Email</label>
                                                    <div class="col-md-12 p-0 ">
                                                        <input type="text" asp-for="SupplierEmail" class="form-control input-full text-left">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2 pr-1 pl-1">
                                                <div class="form-group" style="margin-top:27px">
                                                    <input type="checkbox" asp-for="IsSendEmail"> <label asp-for="IsSendEmail" class="control-label"> Send Email</label>
                                                </div>
                                            </div
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <input type="checkbox" id="chkAllFoodMenu" class="control-label"><label class="control-label"> Use All Food Menu</label>
                                            </div>
                                        </div>>*@
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="EmployeeList" class="control-label">Responsible Person</label>
                                            <select asp-for="EmployeeId"
                                                    class="form-control"
                                                    asp-items="@(new SelectList(Model.EmployeeList, "Value", "Text"))">
                                            </select>
                                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-2 pl-2">
                                        <div class="form-group">
                                            <label asp-for="PurchaseGRNDate" class="control-label"></label>
                                            <input asp-for="PurchaseGRNDate" type="date" class="form-control" />
                                            <span asp-validation-for="PurchaseGRNDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-8 pr-2 pl-2">
                                    <div class="form-group">
                                        <label asp-for="FoodMenuList" class="control-label">Product</label>
                                        <select asp-for="FoodMenuId"
                                                class="form-control " onchange="GetFoodMenuLastPrice(FoodMenuId)">
                                            <option value="">Select</option>
                                        </select>
                                        <span asp-validation-for="FoodMenuId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-1 pr-2 pl-2">
                                    <div class="form-group">
                                        <label class="control-label text-right">GRN Qty</label>
                                        <input class="form-control text-right" type="text" value="1" placeholder="0.00" id="GRNQty" />
                                    </div>
                                </div>
                                <div class="col-md-1 pr-2 pl-2">
                                    <div class="form-group">
                                        <label class="control-label text-right">Price</label>
                                        <input class="form-control text-right" type="number" placeholder="0.00" id="UnitPrice" />
                                    </div>
                                </div>
                                <div class="col-md-1 pr-2 pl-2">
                                    <div class="form-group">
                                        <label class="control-label text-right">Disc%</label>
                                        <input class="form-control text-right" type="text" value="0" placeholder="0.00" id="DiscountPercentage" />
                                    </div>
                                </div>
                                <div class="col-md-1 pr-2 pl-2">
                                    <div class="form-group">
                                        <label class="control-label"></label>
                                        <button id="addRow" class="btn btn-light" style="margin-top: 22px">Add</button>
                                        <input class="form-control" type="hidden" id="PurchaseGRNId" value="0" />
                                        <input asp-for="Id" class="form-control" type="hidden" />
                                    </div>
                                </div>
                                @*<div class="col-md-1 pr-2 pl-2">
                                        <div class="form-group">
                                            <label class="control-label"></label>
                                            <button id="cancel" class="btn btn-light" style="margin-top: 22px">Reset</button>
                                        </div>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-wrap">
                                <table id="purchaseOrderDetails" width="100%" autowidth="true" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="basic-datatables_info">
                                    <thead>
                                        <tr>
                                            <th style="width:0%">FoodMenuId</th>
                                            <th style="width:25%">Food Menu</th>
                                            <th style="width:8%" class="text-right">PO Qty</th>
                                            <th style="width:8%" class="text-right">GRN Qty</th>
                                            <th style="width:8%" class="text-right">Price</th>
                                            <th style="width:0%" class="text-right">Dis%</th>
                                            <th style="width:8%" class="text-right">Dis Amt</th>
                                            <th style="width:0%" class="text-right">Tax%</th>
                                            <th style="width:8%" class="text-right">Tax Amt</th>
                                            <th style="width:8%" class="text-right">Total</th>
                                            <th style="width:8%">Action</th>
                                            <th style="width:0%" class="text-center">Id</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Id > 0)
                                        {
                                            @foreach (var item in Model.PurchaseGRNDetails)
                                            {
                                                var tm = "#myModal" + item.PurchaseGRNId;
                                                var mid = "myModal" + item.PurchaseGRNId;
                                                var rowId = "rowId" + item.PurchaseGRNId;
                                                <tr id="@rowId">
                                                    <td>
                                                        @item.FoodMenuId
                                                    </td>
                                                    <td>
                                                        @item.FoodMenuName
                                                    </td>
                                                    <td class="text-right">
                                                        @item.POQTY.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.GRNQTY.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.UnitPrice.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.DiscountPercentage.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.DiscountAmount.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.TaxAmount.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.TaxAmount.ToString("N")
                                                    </td>
                                                    <td class="text-right">
                                                        @item.TotalAmount.ToString("N")
                                                    </td>
                                                    <td>
                                                        <div class="form-button-action">
                                                            <a href="#" data-itemid="@item.FoodMenuId"></a><a href="#" data-toggle="modal" data-target="@tm">Delete<i></i></a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @item.PurchaseGRNId
                                                    </td>
                                                    <div class="modal fade" id=@mid tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    @SharedLocalizer.GetLocalizedHtmlString("DeleteConfrim")
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <a id="deleteBtn" data-itemId="@item.FoodMenuId" onclick="deleteOrder(@item.PurchaseGRNId, @item.FoodMenuId,@rowId)" class="btn bg-danger mr-1" data-dismiss="modal">Delete</a>
                                                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-1 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DeliveryNoteNumber" class="control-label">Del. Note No.</label>
                                                <input asp-for="DeliveryNoteNumber" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-2 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DeliveryDate" class="control-label"></label>
                                                <input asp-for="DeliveryDate" type="date" class="form-control" />
                                                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-1 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="DriverName" class="control-label">Driver Name</label>
                                                <input asp-for="DriverName" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-1 pr-2 pl-2">
                                            <div class="form-group">
                                                <label asp-for="VehicleNumber" class="control-label">Vehicle Number</label>
                                                <input asp-for="VehicleNumber" class="form-control input-full text-left">
                                            </div>
                                        </div>
                                        <div class="col-md-7 pl-2 pr-2">
                                            <div class="form-group">
                                                <label asp-for="Notes" class="control-label ">Notes</label>
                                                <textarea asp-for="Notes" class="form-control input-full text-left" rows="1" cols="50"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group form-inline fc-left">
                                                <div class="col-md-1 pr-2 pl-2">
                                                    <label asp-for="GrossAmount" class="control-label">Gross Amount</label>
                                                    <input asp-for="GrossAmount" style="width:80px" class="form-control input-full text-right">
                                                </div>
                                                <div class="col-md-1 pr-2 pl-2">
                                                    <label asp-for="TaxAmount" class="control-label">VAT </label>
                                                    <input asp-for="TaxAmount" style="width:80px" class="form-control input-full text-right">
                                                </div>
                                                <div class="col-md-1 pr-2 pl-2">
                                                    <label asp-for="TotalAmount" class="control-label">Total Amount</label>
                                                    <input asp-for="TotalAmount" style="width:80px" class="form-control input-full text-right">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-button-action">
                                <input id="saveOrder" type="submit" class="btn btn-primary " style="margin:0px 0px 0px 5px" value="Save" />
                                <a href='@Url.Action("PurchaseGRNFoodMenuList", "PurchaseGRNFoodMenu")' class="btn btn-primary" style="margin:0px 0px 0px 5px">Cancel</a>
                            </div>
                        </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary ">Ok</button>
                <button type="button" id="ok" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

