@model RocketPOS.Models.UserModel
@using RocketPOS.Framework;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="page-inner">
    <div class="page-header"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Manage User</h2>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="User">
                                <div class="form-group">
                                    <label asp-for="EmployeeList" class="control-label">Employee</label>
                                    <select asp-for="EmployeeId" class="form-control"
                                            asp-items="@(new SelectList(Model.EmployeeList, "Value", "Text"))">
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OutletList" class="control-label">Outlet</label>
                                    <select asp-for="OutletId" class="form-control"
                                            asp-items="@(new MultiSelectList(Model.OutletList, "Value", "Text"))">
                                    </select>

                                    <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="@Model.OutletList" asp-items="(List<SelectListItem>)ViewBag.OutletList"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                @*<div class="form-group">
                                    <label asp-for="ThumbToken" class="control-label"></label>
                                    <input asp-for="ThumbToken" class="form-control" />
                                    <span asp-validation-for="ThumbToken" class="text-danger"></span>
                                </div>*@
                                <div class="form-group">
                                    <label asp-for="RoleTypeId" class="control-label">Role</label>
                                    <select asp-for="RoleTypeId" class="form-control" asp-items="Html.GetEnumSelectList<RoleType>()">
                                        <option selected="selected" value="">--Select role--</option>
                                    </select>
                                    <span asp-validation-for="RoleTypeId" class="text-danger" />
                                    a
                                </div>
                                <div class="form-group">
                                    <label asp-for="Counter" class="control-label"></label>
                                    <input asp-for="Counter" class="form-control" />
                                    <span asp-validation-for="Counter" class="text-danger"></span>
                                </div>
                                @if (Model != null)
                                {
                                    @if (Model.Id > 0)
                                    {

                                        <div class="form-group">
                                            <label asp-for="IsActive" class="control-label"></label>
                                            <input asp-for="IsActive" class="form-control" />
                                        </div>
                                    }
                                }
                                <div class="form-group">
                                    @if (Model != null)
                                    {
                                        @if (Model.Id > 0)
                                        {
                                            <input type="submit" value="Edit" class="btn btn-primary btn-sm" />
                                        }
                                        else
                                        {
                                            <input type="submit" value="Add" class="btn btn-primary btn-sm" />
                                        }
                                    }
                                    <input type="submit" asp-action="Index" value="Cancel" class="btn btn-primary btn-sm" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" id="save" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>
@{
    if (ViewBag.Result != null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            });
        </script>
    }
}
@section Scripts{
    <script>
        $('#save').click(function () {
            window.location.href = "Index";
        });
        $('#OK').click(function () {
            $("#User").prev().focus();
            $("#vModal").modal('hide');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />

}
